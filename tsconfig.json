{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "nodenext",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "declaration": true
    },
    "ts-node": {
        "esm": true
    }
}
